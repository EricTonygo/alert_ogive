{#<div id="domain_grid{{domain.id}}" class="column">#}
<div class="ui fluid card">
    <div class="content">
        <div class="header">{{domain.name}}</div>
        <div class="description">
            {{domain.description}}
        </div>
    </div>
    <div class="extra content">
        {% if is_granted('ROLE_ADMIN') %}
            <a id="enable_domain_grid{{domain.id}}" onclick="enable_domain({{domain.id}});" {% if domain.state == 1 %} style="display: none" {% endif %}  data-tooltip="Activer" data-position="bottom center" data-inverted=""><i class="unlock red icon"></i></a>
            <a id="disable_domain_grid{{domain.id}}" onclick="disable_domain({{domain.id}});" {% if domain.state != 1 %} style="display: none" {% endif %}  data-tooltip="Désactiver" data-position="bottom center" data-inverted=""><i class="lock green icon"></i></a>
        {% endif %}
        <div class="right floated">
            <div class="ui dropdown">
                <i class="ellipsis vertical icon"></i>
                <div class="menu">
                    <div onclick="show_domain({{domain.id}});" class="show_domain_btn item">
                        <i class="unhide icon"></i>
                        Détails
                    </div>
                    <div onclick="edit_domain({{domain.id}});" class="edit_domain_btn item">
                        <i class="edit icon"></i>
                        Modifier
                    </div>
                    <div onclick="delete_domain({{domain.id}});" class="delete_domain_btn item">
                        <i class="trash icon"></i>
                        Supprimer
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{#</div>#}