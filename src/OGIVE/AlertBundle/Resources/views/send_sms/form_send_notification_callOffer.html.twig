<div id="send_notification_callOffer" class="ui small modal">
    <i class="close icon"></i>
    <div class="header">
        Notifier les abonnés de l'{{callOffer.type}} N°{{callOffer.reference}}
    </div>
    <div class="content">
        <form method = 'POST' action= '{{path('send_notification_callOffer_post', {'id': callOffer.id})}}' class = 'ui form' id ='send_notification_callOffer_form' name='send_notification_callOffer_form'>
            <div class="field">
                <label>Le resumé à envoyer par SMS</label>
                <textarea name='abstract_sms' rows="5">{{callOffer.abstractForSmsNotification}}</textarea>
                <label>longueur du message : {{callOffer.abstractForSmsNotification|length}}</label>
            </div>
            
            <div class="field">
                <label>Le resumé à envoyer par Email</label>
                <textarea name='abstract' rows="5">{{callOffer.abstract}}</textarea>
            </div>

            <div class="field" {% if callOffer.type == "AONR" or callOffer.type== "AOIR" %} style="display: none" {% endif %}>
                <div class="ui checkbox">
                    <input id='checkbox_all_subscribers' type="checkbox" name="all_subscribers">
                    <label> Notifier tous les abonnés du domaine</label>
                </div>
            </div>
            <div id='field_select_subscribers' class="field">
                <select id='subscribers'  name="subscribers" multiple="" class="ui search fluid dropdown">
                    <option value="">Selectionner les abonnés à notifier</option>
                    {%if subscribers%}
                        {%for subscriber in subscribers %}
                            <option value="{{subscriber.id}}">{{subscriber.name}}({{subscriber.entreprise.name}})</option>
                        {%endfor%} 
                    {%endif%}
                </select>
            </div>
            <div id='field_common_notification' class="field">
                <select id='notificationTypes'  name="common_notification" class="ui search fluid dropdown">
                    <option value="">Selectionner un type de notification commun si nécessaire</option>                    
                    <option value="3">SMS et Email</option>
                    <option value="2">SMS seulement</option>
                    <option value="1">Email seulement</option>
                </select>
            </div>

            <div class="field">
                <div id="server_error_message_send_notification" class="ui negative message" style="display:none">
                    <i class="close icon"></i>
                    <div id="server_error_content_send_notification" class="header">Internal server error</div>
                </div>
                <div id="error_name_message_send_notification" class="ui error message" style="display: none">
                    <i class="close icon"></i>
                    <div id="error_name_header_send_notification" class="header"></div>
                    <ul id="error_name_list_send_notification" class="list">

                    </ul>
                </div>
            </div>
        </form>
    </div>
    <div class="actions">
        <div id="cancel_send_notification_callOffer" class="ui black deny button">
            Annuler
        </div>
        <div id='submit_send_notification_callOffer' class="ui primary icon button">
            <i class="send icon"></i>
            Envoyer
        </div>
    </div>
</div>