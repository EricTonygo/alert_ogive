<div id="add_call_offer" class="ui small modal">
    <i class="close icon"></i>
    <div class="header">
        Ajout d'un appel d'offre
    </div>
    <div class="content">
        <form id="add_call_offer_form" class="ui form">
            <div class="field">
                <label class="left aligned">Type</label>
                <input type="text" name="type_procedure" placeholder="Nom">
            </div>

            <div class="field">
                <label class="left aligned" >Reference</label>
                <input type="text" name="reference" placeholder="Reférence">
            </div>

            <div class="field">
                <label class="left aligned">Objet</label>
                <input type="text" name="object" placeholder="Object">
            </div>

            <div class="field">
                <label class="left aligned">Maître d'ouvrage</label>
                <input type="text" name="owner" placeholder="Maître d'ouvrage">
            </div>

            <div class="field">
                <label class="left aligned" >Date de publication</label>
                <input type="text" name="published_date" placeholder="Date de publication">
            </div>

            <div class="field">
                <label class="left aligned">Date de debut de depôt</label>
                <input type="text" name="opening_date" placeholder="Date de debut de depôt">
            </div>

            <div class="field">
                <label class="left aligned">Date limite</label>
                <input type="text" name="deadline" placeholder="Date limite">
            </div>

        </form>
    </div>
