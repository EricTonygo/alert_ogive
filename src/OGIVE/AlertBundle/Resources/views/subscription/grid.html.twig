<div id='list_as_grid' class="ui basic segment container">
    <div id='list_as_grid_content' class="ui four column doubling stackable grid">
        {%if subscriptions%}
            {%for subscription in subscriptions%}            
                <div id="subscription_grid{{subscription.id}}" class="column">
                    <div class="ui fluid card">
                        <div class="content">
                            <div class="header">{{subscription.name}}</div>
                            <div class="description">
                                Périodicité : {{subscription.periodicity|periodicity}} <br/>
                                Coût: {{ subscription.price}}{{ subscription.currency}}
                            </div>
                        </div>
                        <div class="extra content">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a id="enable_subscription_grid{{subscription.id}}" onclick="enable_subscription({{subscription.id}});" {% if subscription.state == 1 %} style="display: none" {% endif %}  data-tooltip="Activer" data-position="bottom center" data-inverted=""><i class="unlock red icon"></i></a>
                                <a id="disable_subscription_grid{{subscription.id}}" onclick="disable_subscription({{subscription.id}});" {% if subscription.state != 1 %} style="display: none" {% endif %}  data-tooltip="Désactiver" data-position="bottom center" data-inverted=""><i class="lock green icon"></i></a>
                            {% endif %}
                            <div class="right floated">
                                <div class="ui dropdown item">
                                    <i class="ellipsis vertical icon"></i>
                                    <div class="menu">
                                        <div onclick="show_subscription({{subscription.id}});" class="show_subscription_btn item">
                                            <i class="unhide icon"></i>
                                            Détails
                                        </div>
                                        <div onclick="edit_subscription({{subscription.id}});" class="edit_subscription_btn item">
                                            <i class="edit icon"></i>
                                            Modifier
                                        </div>
                                        <div onclick="delete_subscription({{subscription.id}});" class="delete_subscription_btn item">
                                            <i class="trash icon"></i>
                                            Supprimer
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {%endfor%} 
        {%endif%}         
    </div>
</div>