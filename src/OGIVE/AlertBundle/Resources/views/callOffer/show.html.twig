<div id="edit_callOffer" class="ui small modal">
    <i class="close icon"></i>
    <div id="header_details" class="header">
        Details de l'appel d'offre << {{callOffer.reference}} >>
    </div>
    <div id="header_edits" class="header" style="display: none">
        Modification de l'appel d'offre << {{callOffer.reference}} >>
    </div>
    <div class="content">
        {{ form_start(form, {'method': 'PUT', 'action': path('call_offer_update', {'id': callOffer.id}), 'attr': {'class': 'ui form', 'id': 'edit_callOffer_form'} }) }}
        <div id="block_form_edit" style="display: none">
            <div class="field">
                {{ form_label(form.reference,"Référence") }}
                {{ form_widget(form.reference,{'attr':{'placeholder':"Référence de l'appel d'offre", 'data-validate': 'reference'}})}}
            </div>

            <div class="field">
                {{ form_label(form.object,"Objet") }}
                {{ form_errors(form.object, {'attr': {'class': 'ui error message'}})}}
                {{ form_widget(form.object,{'attr':{'placeholder':"Objet de l'appel d'offre", 'data-validate': 'object'}})}}
            </div>

            <div class="field">
                {{ form_label(form.owner,"Maître d'ouvrage") }}
                {{ form_errors(form.owner, {'attr': {'class': 'ui error message'}})}}
                {{ form_widget(form.owner,{'attr':{'placeholder':"Maître d'ouvrage", 'data-validate': 'owner'}})}}
            </div>

            <div class="field">
                {{ form_label(form.domain,"Domaine") }}
                {{ form_errors(form.domain, {'attr': {'class': 'ui error message'}})}}
                {{ form_widget(form.domain,{'attr':{'data-validate': 'domain', 'class': 'ui dropdown'}})}}
            </div>

            <div class="field">
                {{ form_label(form.publicationDate,"Date de publication") }}
                {{ form_widget(form.publicationDate,{'attr':{'data-validate': 'publication_date'}})}}
            </div>

            <div class="field">
                {{ form_label(form.openingDate,"Date d'ouverture de dépôt") }}
                <div class="two fields">
                    <div class="field">
                        {{ form_widget(form.openingDate.date,{'attr':{'data-validate': 'opening_date_date'}})}}
                    </div>
                    <div class="field">
                        {{ form_widget(form.openingDate.time,{'attr':{'data-validate': 'opening_date_time'}})}}
                    </div>
                </div>
            </div>

            <div class="field">
                {{ form_label(form.deadline,"Date limite de dépôt") }}
                <div class="two fields">
                    <div class="field">
                        {{ form_widget(form.deadline.date,{'attr':{'data-validate': 'deadline_date'}})}}
                    </div>
                    <div class="field">
                        {{ form_widget(form.deadline.time,{'attr':{'data-validate': 'deadline_time'}})}}
                    </div>
                </div>
            </div>

            <div class="field">
                {{ form_label(form.sendingDate,"Date de notification aux abonnés") }}
                <div class="two fields">
                    <div class="field">
                        {{ form_widget(form.sendingDate.date,{'attr':{'data-validate': 'sending_date_date'}})}}
                    </div>
                    <div class="field">
                        {{ form_widget(form.sendingDate.time,{'attr':{'data-validate': 'sending_date_time'}})}}
                    </div>
                </div>
            </div>
            {#<div class="field">
                {{ form_label(form.uploadedFiles, "Fichiers attachés")}}           
                    {{ form_errors(form.uploadedFiles, {'attr': {'class': 'list'}})}}           
                {{ form_widget(form.uploadedFiles) }}
            </div>#}

            <div class="field">
                {{form_rest(form)}}
                <div id="server_error_message" class="ui negative message" style="display:none">
                    <i class="close icon"></i>
                    <div id="server_error_content" class="header">Internal server error</div>
                </div>
                <div id="error_name_message" class="ui error message" style="display: none">
                    <i class="close icon"></i>
                    <div id="error_name_header" class="header"></div>
                    <ul id="error_name_list" class="list">

                    </ul>
                </div>
            </div>
        </div>
        <div id="block_details">
            <div class="two fields">
                <div class="field">
                    <label>Référence : </label> 
                </div>
                <div class="field">
                    <span> {{ callOffer.reference}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Objet : </label> 
                </div>
                <div class="field">
                    {{ callOffer.object}}
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Maître d'ouvrage : </label> 
                </div>
                <div class="field">
                    <span> {{ callOffer.owner}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Domaine : </label> 
                </div>
                <div class="field">
                    <span> {{ callOffer.domain.name}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Date de publication : </label> 
                </div>
                <div class="field">
                    <span> {{ callOffer.publicationDate is empty ? "" : callOffer.publicationDate|date('d-m-Y')}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Date de début de dépôt des offres : </label> 
                </div>
                <div class="field">
                    <span> {{ callOffer.openingDate is empty ? "" : callOffer.openingDate|date('d-m-Y H:i:s')}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Date de fermeture de dépôt des offres : </label> 
                </div>
                <div class="field">
                    <span> {{ callOffer.deadline is empty ? "" : callOffer.deadline|date('d-m-Y H:i:s')}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Date de notification aux abonnés : </label>
                </div>
                <div class="field">
                    <span> {{ callOffer.sendingDate is empty ? "" : callOffer.sendingDate|date('d-m-Y H:i:s')}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Date de création : </label>
                </div>
                <div class="field">
                    <span> {{ callOffer.createDate is empty ? "" : callOffer.createDate|date('d-m-Y H:i:s')}}</span>
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Date de la dernière modification : </label> 
                </div>
                <div class="field">
                    <span> {{ callOffer.createDate is empty ? "" : callOffer.createDate|date('d-m-Y H:i:s')}}</span>
                </div>
            </div>

            <div id="field_state_enable" class="two fields" {% if callOffer.state != 1 %} style="display: none" {% endif %}>
                <div class="field">
                     <label>Etat : </label>
                </div>
                <div class="field">
                     <span> Activé </span>
                </div>             
            </div>

            <div id="field_state_disable" class="two fields" {% if callOffer.state == 1 %} style="display: none" {% endif %}>
                <div class="field">
                     <label>Etat : </label>
                </div>
                <div class="field">
                     <span> Désactivé </span>
                </div>
                 
            </div>

        </div>
        <div class="field">
            {{form_rest(form)}}
            <div id="server_error_message_edit" class="ui negative message" style="display:none">
                <i class="close icon"></i>
                <div id="server_error_content_edit" class="header">Internal server error</div>
            </div>
            <div id="error_name_message_edit" class="ui error message" style="display: none">
                <i class="close icon"></i>
                <div id="error_name_header_edit" class="header"></div>
                <ul id="error_name_list_edit" class="list">

                </ul>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
    <div class="actions">
        <div id="cancel_details_callOffer" class="ui black deny button">
            Fermer
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div id="cancel_edit_callOffer" class="ui grey button" style="display:none">
                Annuler
            </div>
            <div id='disable_callOffer' onclick="disable_callOffer({{callOffer.id}});" class="ui red icon button" {% if callOffer.state != 1 %} style="display: none" {% endif %}>
                <i class="lock icon"></i>
                Désactiver
            </div>
            <div id='enable_callOffer' onclick="enable_callOffer({{callOffer.id}});" class="ui green icon button" {% if callOffer.state == 1 %} style="display: none" {% endif %}>
                <i class="unlock icon"></i>
                Activer
            </div>
            <div id='edit_callOffer_btn' class="ui primary icon button">
                <i class="edit icon"></i>
                Modifier
            </div>
            <div id='submit_edit_callOffer' class="ui primary icon button" style="display: none">
                <i class="save icon"></i>
                Sauvegarder
            </div>
        {% endif %}
    </div>
</div>