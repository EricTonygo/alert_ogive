<div id='list_as_table' class="ui basic segment container">
    <table class="ui very basic table">
        <thead>
            <tr><th>Numéro de l'abonné</th>
                <th>Message</th>
                <th>Date d'envoi</th>
                <th>Coût</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody id='list_as_table_content'>
            {%if messages%}
                {%for message in messages%}
                    <tr >
                        <td>
                            <div class="ui ribbon label"> {{message.to}}</div>
                        </td>
                        <td>
                            {{message.body}}
                        </td>
                        <td>
                            {{message.dateSent |date('d-m-Y H:i:s')}}
                        </td>
                        <td>
                            {{message.price}}
                        </td>
                        <td>{{message.status}}</td>                       
                    </tr>
                {%endfor%} 
            {%endif%} 

        </tbody>
    </table>
</div> 