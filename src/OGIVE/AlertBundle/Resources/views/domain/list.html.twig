<div id='list_as_table' class="ui basic segment container" style="display: none;">
    <table class="ui very basic table">
        <thead>
            <tr><th>Nom</th>
                <th>Description</th>
                <th class="right aligned"></th>
            </tr>
        </thead>
        <tbody id='list_as_table_content'>
        {%if domains%}
            {%for domain in domains%}
            <tr id="domain{{domain.id}}">
                <td>
                    <div class="ui ribbon label">{{domain.name}}</div>
                </td>
                <td>{{domain.description}}</td>
                <td class="right aligned">
                    <div class="ui dropdown item">
                        <i class="ellipsis vertical icon"></i>
                        <div class="menu">
                            <div onclick="edit_domain({{domain.id}});" class="edit_domain_btn item">
                                <i class="edit icon"></i>
                                Modifier
                            </div>
                            <div onclick="delete_domain({{domain.id}})" class="delete_domain_btn item">
                                <i class="trash icon"></i>
                                Supprimer
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            {%endfor%} 
        {%endif%} 
            
        </tbody>
