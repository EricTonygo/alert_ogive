        <div class="ui black deny button">
            Annuler
        </div>
        <div id='submit_call_offer' class="ui primary icon button">
            <i class="save icon"></i>
            Sauvegarder
        </div>
    </div>
</div>
<button id="add_call_offer_btn" class="float_button circular ui huge red icon button">
    <i class="icon plus"></i>
</button>