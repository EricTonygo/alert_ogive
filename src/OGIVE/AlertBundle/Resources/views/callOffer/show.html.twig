{% extends 'base.html.twig' %}

{% block body %}
    <h1>Domain</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ domain.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ domain.name }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{% if domain.createDate %}{{ domain.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lastupdatedate</th>
                <td>{% if domain.lastUpdateDate %}{{ domain.lastUpdateDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ domain.status }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('domain_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('domain_edit', { 'id': domain.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
