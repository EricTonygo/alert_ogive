<div id="send_notification_expressionInterest" class="ui small modal">
    <i class="close icon"></i>
    <div class="header">
        Notifier les abonnés de l'attribution N°{{expressionInterest.reference}}
    </div>
    <div class="content">
        <form method = 'POST' action= '{{path('send_notification_expressionInterest', {'id': expressionInterest.id})}}' class = 'ui form' id ='send_notification_expressionInterest_form' name='send_notification_expressionInterest_form'>
            <div class="field">
                <label>Le resumé à envoyer</label>
                <textarea name='abstract'>{{expressionInterest.abstract}}</textarea>
            </div>

            <div class="field" >
                <div class="ui checkbox">
                    <input id='checkbox_all_subscribers' type="checkbox" name="all_subscribers">
                    <label> Notifier tous les abonnés du domaine</label>
                </div>
            </div>
            <div id='field_select_subscribers' class="field">
                <select id='subscribers'  name="subscribers[]" multiple="" class="ui search fluid dropdown">
                    <option value="">Selectionner les abonnés à notifier</option>
                    {%if subscribers%}
                        {%for subscriber in subscribers %}
                            <option value="{{subscriber.id}}">{{subscriber.phoneNumber}}</option>
                        {%endfor%} 
                    {%endif%}
                </select>
            </div>

            <div class="field">
                <div id="server_error_message_send_notification" class="ui negative message" style="display:none">
                    <i class="close icon"></i>
                    <div id="server_error_content_send_notification" class="header">Internal server error</div>
                </div>
                <div id="error_name_message_send_notification" class="ui error message" style="display: none">
                    <i class="close icon"></i>
                    <div id="error_name_header_send_notification" class="header"></div>
                    <ul id="error_name_list_send_notification" class="list">

                    </ul>
                </div>
            </div>
        </form>
    </div>
    <div class="actions">
        <div id="cancel_send_notification_expressionInterest" class="ui black deny button">
            Annuler
        </div>
        <div id='submit_send_notification_expressionInterest' class="ui primary icon button">
            <i class="send icon"></i>
            Envoyer
        </div>
    </div>
</div>