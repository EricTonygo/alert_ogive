<div id='list_as_table' class="ui basic segment container" style="display: none;">
    <table class="ui very basic table">
        <thead>
            <tr><th>Référence</th>
                <th>Object</th>
                <th class="right aligned"></th>
            </tr>
        </thead>
        <tbody id='list_as_table_content'>
            {%if procedureResults%}
                {%for procedureResult in procedureResults%}
                    <tr id="procedureResult_list{{procedureResult.id}}">
                        <td>
                            <div class="ui ribbon label">{{procedureResult.reference}}</div>
                        </td>
                        <td>{{procedureResult.object}}</td>
                        <td class="right aligned">
                            <div class="ui dropdown item">
                                <i class="ellipsis vertical icon"></i>
                                <div class="menu">
                                    <div onclick="show_procedureResult({{procedureResult.id}});" class="show_procedureResult_btn item">
                                        <i class="unhide icon"></i>
                                        Détails
                                    </div>
                                    <div onclick="edit_procedureResult({{procedureResult.id}});" class="edit_procedureResult_btn item">
                                        <i class="edit icon"></i>
                                        Modifier
                                    </div>
                                    <div onclick="delete_procedureResult({{procedureResult.id}});" class="delete_procedureResult_btn item">
                                        <i class="trash icon"></i>
                                        Supprimer
                                    </div>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <div onclick="enable_procedureResult({{procedureResult.id}});" class="enable_procedureResult_btn item" {% if procedureResult.state == 1 %} style="display: none" {% endif %}>
                                            <i class="unlock icon"></i>
                                            Activer
                                        </div>
                                        <div onclick="disable_procedureResult({{procedureResult.id}});" class="disable_procedureResult_btn item" {% if procedureResult.state != 1 %} style="display: none" {% endif %}>
                                            <i class="lock icon"></i>
                                            Désactiver
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                    </tr>
                {%endfor%} 
            {%endif%} 

        </tbody>
        <tfoot>
            <!--tr><th colspan="3">
                    <div class="ui right floated pagination menu">
                        <a class="icon item">
                            <i class="left chevron icon"></i>
                        </a>
                        <a class="item">1</a>
                        <a class="item">2</a>
                        <a class="item">3</a>
                        <a class="item">4</a>
                        <a class="icon item">
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </th>
            </tr--></tfoot>
    </table>
</div> 