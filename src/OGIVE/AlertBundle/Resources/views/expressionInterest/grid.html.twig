<div id='list_as_grid' class="ui basic segment container">
    <div id='list_as_grid_content' class="ui four column doubling stackable grid">
        {%if expressionInterests%}
            {%for expressionInterest in expressionInterests%}            
                <div id="expressionInterest_grid{{expressionInterest.id}}" class="column">
                    <div class="ui fluid card">
                        <div class="content">
                            <div class="header">{{expressionInterest.reference}}</div>
                            <div class="description">
                                {{expressionInterest.object}}
                            </div>
                        </div>
                        <div class="extra content">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a id="enable_expressionInterest_grid{{expressionInterest.id}}" onclick="enable_expressionInterest({{expressionInterest.id}});" {% if expressionInterest.state == 1 %} style="display: none" {% endif %}  data-tooltip="Activer" data-position="bottom center" data-inverted=""><i class="unlock red icon"></i></a>
                                <a id="disable_expressionInterest_grid{{expressionInterest.id}}" onclick="disable_expressionInterest({{expressionInterest.id}});" {% if expressionInterest.state != 1 %} style="display: none" {% endif %}  data-tooltip="Désactiver" data-position="bottom center" data-inverted=""><i class="lock green icon"></i></a>
                            {% endif %}
                            <div class="right floated">
                                <div class="ui dropdown item">
                                    <i class="ellipsis vertical icon"></i>
                                    <div class="menu">
                                        <div onclick="show_expressionInterest({{expressionInterest.id}});" class="show_expressionInterest_btn item">
                                            <i class="unhide icon"></i>
                                            Détails
                                        </div>
                                        <div onclick="edit_expressionInterest({{expressionInterest.id}});" class="edit_expressionInterest_btn item">
                                            <i class="edit icon"></i>
                                            Modifier
                                        </div>
                                        <div onclick="delete_expressionInterest({{expressionInterest.id}});" class="delete_expressionInterest_btn item">
                                            <i class="trash icon"></i>
                                            Supprimer
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {%endfor%} 
        {%endif%}         
    </div>
</div>