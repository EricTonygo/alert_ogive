<div id="add_callOffer" class="ui small modal">
    <i class="close icon"></i>
    <div class="header">
        Ajout d'un appel d'offre
    </div>
    <div class="content">
        {{ form_start(form, {'method': 'POST', 'action': '/calls-offer', 'attr': {'class': 'ui form', 'id': 'add_callOffer_form'} }) }}

        <div class="field">
            {{ form_label(form.reference,"Référence") }}
            {{ form_widget(form.reference,{'attr':{'placeholder':'Référence du callOffere', 'data-validate': 'name'}})}}
        </div>

        <div class="field">
            {{ form_label(form.object,"Objet") }}
            {{ form_errors(form.object, {'attr': {'class': 'ui error message'}})}}
            {{ form_widget(form.object,{'attr':{'placeholder':"Objet de l'appel d'offre", 'data-validate': 'description'}})}}
        </div>

        <div class="field">
            {{form_rest(form)}}
            <div id="server_error_message" class="ui negative message" style="display:none">
                <i class="close icon"></i>
                <div id="server_error_content" class="header">Internal server error</div>
            </div>
            <div id="error_name_message" class="ui error message" style="display: none">
                <i class="close icon"></i>
                <div id="error_name_header" class="header"></div>
                <ul id="error_name_list" class="list">

                </ul>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
    <div class="actions">
        <div id="cancel_add_callOffer" class="ui black deny button">
            Annuler
        </div>
        <div id='submit_callOffer' class="ui primary icon button">
            <i class="save icon"></i>
            Sauvegarder
        </div>
    </div>
</div>
<button id="add_callOffer_btn" class="float_button circular ui huge red icon button" data-tooltip="Nouveau callOffere" data-position="top center" data-inverted="">
    <i class="icon plus"></i>
</button>
